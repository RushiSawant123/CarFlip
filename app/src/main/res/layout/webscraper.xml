<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- TextViews to display car name, price, and image URL -->
    <TextView
        android:id="@+id/textViewCarBrand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Car Name:"
        android:textSize="16sp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/textViewCarName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Car Price:"
        android:textSize="16sp"
        android:layout_below="@id/textViewCarBrand"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/textViewCarPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Car Image URL:"
        android:textSize="16sp"
        android:layout_below="@id/textViewCarName"
        android:layout_marginTop="8dp"/>

    <ImageView
        android:id="@+id/imageViewCar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="500dp"
        tools:srcCompat="@tools:sample/avatars" />

</RelativeLayout>
